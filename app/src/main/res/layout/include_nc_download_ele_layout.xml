<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_dl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transGrayBg"
    android:orientation="vertical"
    android:visibility="gone"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@color/adv_trans_black"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_app_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text=""
        android:textColor="@color/adv_trans_black"
        android:textSize="11sp"

        app:layout_constraintBottom_toBottomOf="@id/tv_app_name"
        app:layout_constraintLeft_toRightOf="@id/tv_app_name"
        app:layout_constraintTop_toTopOf="@id/tv_app_name" />


    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text=""
        android:textColor="@color/adv_trans_black"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />


    <TextView
        android:id="@+id/tv_app_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="介绍说明"
        android:textColor="@color/adv_trans_black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_app_version"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_app_version"

        />


    <TextView
        android:id="@+id/tv_app_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:text="隐私政策"
        android:textColor="@color/adv_trans_black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_app_version"

        app:layout_constraintRight_toLeftOf="@id/tv_app_introduce"
        app:layout_constraintTop_toTopOf="@id/tv_app_version"

        />


    <TextView
        android:id="@+id/tv_app_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="权限详情"
        android:textColor="@color/adv_trans_black"
        android:textSize="11sp"

        app:layout_constraintBottom_toBottomOf="@id/tv_app_version"
        app:layout_constraintRight_toLeftOf="@id/tv_app_privacy"

        app:layout_constraintTop_toTopOf="@id/tv_app_version" />


</android.support.constraint.ConstraintLayout>