<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="选择SDK平台：" />

            <Spinner
                android:id="@+id/sp_sdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/sdk_platform"/>
        </LinearLayout>


        <Button
            android:id="@+id/banner_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onBanner"
            android:text="横幅" />

        <Button
            android:id="@+id/splash_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSplash"
            android:text="开屏" />

        <Button
            android:id="@+id/interstitial_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onInterstitial"
            android:text="插屏" />

        <!--<Button-->
        <!--android:id="@+id/native_button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:onClick="onNative"-->
        <!--android:text="自渲染原生" />-->

        <!--<Button-->
        <!--android:id="@+id/native_recycler_view_button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:onClick="onNativeRecyclerView"-->
        <!--android:text="自渲染原生RecyclerView" />-->

        <Button
            android:id="@+id/native_express_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onNativeExpress"
            android:text="原生模板" />

        <Button
            android:id="@+id/native_express_recycler_view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onNativeExpressRecyclerView"
            android:text="原生模板RecyclerView" />

        <Button
            android:id="@+id/rewardvideo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRewardVideo"
            android:text="激励视频" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="1" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>