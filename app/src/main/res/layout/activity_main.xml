<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Advance Demo"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="手动切换SDK(非立即生效)：" />

            <Spinner
                android:id="@+id/sp_sdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/sdk_platform" />
        </LinearLayout>


        <Button
            android:id="@+id/banner_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onBanner"
            android:text="横幅" />

        <Button
            android:id="@+id/splash_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSplash"
            android:text="开屏" />

        <Button
            android:id="@+id/interstitial_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onInterstitial"
            android:text="插屏" />

        <!--<Button-->
        <!--android:id="@+id/native_button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:onClick="onNative"-->
        <!--android:text="自渲染原生" />-->

        <!--<Button-->
        <!--android:id="@+id/native_recycler_view_button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:onClick="onNativeRecyclerView"-->
        <!--android:text="自渲染原生RecyclerView" />-->

        <Button
            android:id="@+id/native_express_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onNativeExpress"
            android:text="原生模板" />

        <Button
            android:id="@+id/native_express_recycler_view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onNativeExpressRecyclerView"
            android:text="原生模板RecyclerView" />

        <Button
            android:id="@+id/rewardvideo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRewardVideo"
            android:text="激励视频" />

        <Button
            android:id="@+id/fullvideo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onFullVideo"
            android:text="全屏视频" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/cus_banner_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCusBanner"
            android:text="自定义横幅" />
        <Button
            android:id="@+id/cus_native_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCusNative"
            android:text="自定义原生自渲染" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="" />
    </LinearLayout>
</ScrollView>